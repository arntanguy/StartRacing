<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<useStyles filename="nifty-default-styles.xml" />
	<useControls filename="nifty-default-controls.xml" />
	
	<screen id="achat" controller="game.Achat">
		<layer id="background" childLayout="center">
		
		</layer>
		<layer id="foreground" childLayout="center">
			<panel id="centerWrapper" height="100%" childLayout="vertical">
				<text font="Interface/Fonts/ArialBlack_60.fnt" height="15%" align="center" color="#ffff"
					text="Magasin" />

				<panel height="2%"/>
				<panel childLayout="horizontal">
					<text font="Interface/Fonts/CenturySchoolbookL_26.fnt" width="40%" align="center" text="MONNAIE : " />
					<control name="textfield" height="35px" width="40%" id="monnaie" />
					<text font="Interface/Fonts/CenturySchoolbookL_26.fnt" text="Eur" height="35px" width="10%" align="left" />
				</panel>

				<panel height="5%"/>
				<panel childLayout="horizontal">
					<panel width="3%"/>
					<panel childLayout="vertical" width="25%">
						<panel childLayout="horizontal">		
							<text font="Interface/Fonts/CenturySchoolbookL_26.fnt" height="25px" text="Les voitures Ã  vendre : " />
						</panel>
						<panel height="3%"/>
						<text font="Interface/Fonts/CenturySchoolbookL_26.fnt" height="25px" text="Poids : " />
						<panel height="3%"/>
						<text font="Interface/Fonts/CenturySchoolbookL_26.fnt" height="25px" text="Prix en Euro :" />
					</panel>
					<panel width="5%"/>
					<panel childLayout="vertical" width="15%" >
						<panel childLayout="horizontal">
							<control name="checkbox" height="25px" width="15%" id="Bmw" />
							<text font="Interface/Fonts/CenturySchoolbookL_26.fnt" height="25px" width="100%" align="center" text="BMWM3" />
						</panel>
						<panel height="3%"/>
						<control name="textfield" height="25px" id="Bmwweight" color="#ffff"/>
						<control name="textfield" height="25px" id="Bmwpuis" color="#ffff"/>
						<panel height="3%"/>
						<control name="textfield" height="25px" id="Bmwprix" color="#ffff"/>
					</panel>
				</panel>
				
				<panel childLayout="horizontal" height="30%">
					<panel width="20%"/>
					<control id="imgcar" name="imageSelect" height="100%" width="60%" imageWidth="90%" imageHeight="100%" 
				          imageList="Interface/Nifty/bmwm3.jpg,Interface/Nifty/viper.jpg,Interface/Nifty/skyline.jpg">
				    	<interact onClick="changePhoto()"/>
				    </control>
				</panel>
				
				<panel height="14%" width="100%" valign="bottom" align="center" childLayout="horizontal">
					<panel width="22%" />
					<control id="returnButton" width="18%" align="center" height="100%" name="button" label="RETOUR">
						<interact onClick="gotoChooseProfil()" />
					</control>
					<panel width="20%" />
					<control id="applyButton" width="18%" align="center" height="100%" name="button" label="VALIDER">
						<interact onClick="Enregistrer()" />
					</control>
					<panel width="22%" />
				</panel>
			</panel>
		</layer>
	</screen>
</nifty>