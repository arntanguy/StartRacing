<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<useStyles filename="nifty-default-styles.xml" />
	<useControls filename="nifty-default-controls.xml" />
	
	<screen id="achat" controller="game.Achat">
		<layer id="background" childLayout="center">
		
		</layer>
		<layer id="foreground" childLayout="center">
			<panel id="centerWrapper" height="100%" childLayout="vertical">
				<text font="Interface/Fonts/ArialBlack_60.fnt" height="20%" align="center" color="#ffff"
					text="Magasin" />

				<panel height="2%"/>
				<panel childLayout="horizontal">
					<text font="Interface/Fonts/Default.fnt" width="60%" align="center" text="Monnaie : " />
					<control name="textfield" width="40%" id="monnaie" />
				</panel>

				<panel height="5%"/>
				<panel childLayout="horizontal">
					<panel width="3%"/>
					<panel childLayout="vertical" width="15%">
						<panel childLayout="horizontal">		
							<text font="Interface/Fonts/Default.fnt" height="25px" text="Les voitures à vendre : " />
						</panel>
						<panel height="5%"/>
						<text font="Interface/Fonts/Default.fnt" height="25px" text="Hauteur pneu : " />
						<text font="Interface/Fonts/Default.fnt" height="25px" text="Rapport engrenage : " />
						<text font="Interface/Fonts/Default.fnt" height="25px" text="Hauteur rayon : " />
						<text font="Interface/Fonts/Default.fnt" height="25px" text="Poids : " />
						<text font="Interface/Fonts/Default.fnt" height="25px" text="Rigidité : " />
						<text font="Interface/Fonts/Default.fnt" height="25px" text="Masse : " />
						<text font="Interface/Fonts/Default.fnt" height="25px" text="NbrTours / Min :" />
						<text font="Interface/Fonts/Default.fnt" height="25px" text="Limite :" />
						<panel height="5%"/>
						<text font="Interface/Fonts/Default.fnt" height="25px" text="Prix en Euro :" />
					</panel>
					<panel width="5%"/>
					<panel childLayout="vertical" width="15%" >
						<panel childLayout="horizontal">
							<control name="checkbox" height="25px" width="15%" id="Bmw" />
							<text font="Interface/Fonts/Default.fnt" height="25px" width="60%" align="center" text="BMWM3" />
						</panel>
						<panel height="5%"/>
						<control name="textfield" height="25px" id="BmwtireHeight" color="#ffff"/>
						<control name="textfield" height="25px" id="BmwfinalGearRatio" color="#ffff"/>
						<control name="textfield" height="25px" id="BmwtireRadius" color="#ffff"/>
						<control name="textfield" height="25px" id="Bmwweight" color="#ffff"/>
						<control name="textfield" height="25px" id="Bmwstiffness" color="#ffff"/>
						<control name="textfield" height="25px" id="Bmwmass" color="#ffff"/>
						<control name="textfield" height="25px" id="BmwidleRpm" color="#ffff"/>
						<control name="textfield" height="25px" id="Bmwredline" color="#ffff"/>
						<panel height="5%"/>
						<control name="textfield" height="25px" id="Bmwprix" color="#ffff"/>
					</panel>
                    <panel width="5%"/>
					<panel childLayout="vertical" width="15%">
						<panel childLayout="horizontal">
							<control height="25px" name="checkbox" width="15%" id="Dodge" />
							<text height="25px" font="Interface/Fonts/Default.fnt" width="60%" align="center" text="Dodge Viper" />
						</panel>
						<panel height="5%"/>
						<control name="textfield" height="25px" id="DVtireHeight" color="#ffff"/>
						<control name="textfield" height="25px" id="DVfinalGearRatio" color="#ffff"/>
						<control name="textfield" height="25px" id="DVtireRadius" color="#ffff"/>
						<control name="textfield" height="25px" id="DVweight" color="#ffff"/>
						<control name="textfield" height="25px" id="DVstiffness" color="#ffff"/>
						<control name="textfield" height="25px" id="DVmass" color="#ffff"/>
						<control name="textfield" height="25px" id="DVidleRpm" color="#ffff"/>
						<control name="textfield" height="25px" id="DVredline" color="#ffff"/>
						<panel height="5%"/>
						<control name="textfield" height="25px" id="DVprix" color="#ffff"/>			
					</panel>
					<panel width="5%"/>
					<panel childLayout="vertical" width="15%">
						<panel childLayout="horizontal">
							<control height="25px" name="checkbox" width="15%" id="Skyline" />
							<text height="25px" font="Interface/Fonts/Default.fnt" width="60%" align="center" text="Skyline" />
						</panel>
						<panel height="5%"/>
						<control name="textfield" height="25px" id="SLtireHeight" color="#ffff"/>
						<control name="textfield" height="25px" id="SLfinalGearRatio" color="#ffff"/>
						<control name="textfield" height="25px" id="SLtireRadius" color="#ffff"/>
						<control name="textfield" height="25px" id="SLweight" color="#ffff"/>
						<control name="textfield" height="25px" id="SLstiffness" color="#ffff"/>
						<control name="textfield" height="25px" id="SLmass" color="#ffff"/>
						<control name="textfield" height="25px" id="SLidleRpm" color="#ffff"/>
						<control name="textfield" height="25px" id="SLredline" color="#ffff"/>
						<panel height="5%"/>
						<control name="textfield" height="25px" id="SLprix" color="#ffff"/>
					</panel>
				</panel>
				
				<panel height="14%" width="100%" valign="bottom" align="center" childLayout="horizontal">
					<panel width="5%" />
					<control id="returnButton" width="18%" align="center" height="100%" name="button" label="Retour">
						<interact onClick="gotoChooseProfil()" />
					</control>
					<panel width="6%" />
					<control id="applyButton" width="18%" align="center" height="100%" name="button" label="Valider">
						<interact onClick="Enregistrer()" />
					</control>
					<panel width="5%" />
				</panel>
			</panel>
		</layer>
	</screen>
</nifty>