<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<useStyles filename="nifty-default-styles.xml" />
	<useControls filename="nifty-default-controls.xml" />
	
	<screen id="chooseprofil" controller="game.ProfilsScreen">
		<layer id="background" childLayout="center">
		
		</layer>
		<layer id="foreground" childLayout="center">
			<panel id="centerWrapper" height="100%" childLayout="vertical">
				<text font="Interface/Fonts/ArialBlack_60.fnt" height="20%" align="center" color="#ffff"
					text="Choisir un profil" />
					
				<panel height="10%"/>
				<panel childLayout="horizontal">
					<text font="Interface/Fonts/Default.fnt" width="60%" align="center" text="Voici tous les joueurs existants : " />
					<control name="dropDown" width="40%" id="allJoueur" />
				</panel>
				
				<panel height="10%"/>
				<panel childLayout="horizontal">
					<text font="Interface/Fonts/Default.fnt" width="60%" align="center" text="Score course-demi : " />
					<control name="textfield" width="40%" id="demi" />
				</panel>
				
				<panel height="5%"/>
				<panel childLayout="horizontal">
					<text font="Interface/Fonts/Default.fnt" width="60%" align="center" text="Score course-quart : " />
					<control name="textfield" width="40%" id="quart" />
				</panel>
				
				<panel height="5%"/>
				<panel childLayout="horizontal">
					<text font="Interface/Fonts/Default.fnt" width="15%" align="center" text="Score free : " />
					<control name="textfield" width="30%" id="free" />
					<text font="Interface/Fonts/Default.fnt" width="15%" align="center" text="Voiture tuÃ©e : " />
					<control name="textfield" width="30%" id="cardead" />
				</panel>
				
				<panel height="5%"/>
				<panel childLayout="horizontal">
					<text font="Interface/Fonts/Default.fnt" width="60%" align="center" text="Monnaie : " />
					<control name="textfield" width="40%" id="monnaie" />
				</panel>
						
				<panel height="15%"/>
				<panel height="14%" width="100%" valign="bottom" align="center" childLayout="horizontal">
					<panel width="5%" />
					<control id="returnButton" width="18%" align="center" height="100%" name="button" label="Retour">
						<interact onClick="gotoMainMenu()" />
					</control>
					<panel width="6%" />
					<control id="applyButton" width="18%" align="center" height="100%" name="button" label="Valider">
						<interact onClick="Enregistrer()" />
					</control>
					<panel width="6%" />
					<control id="achatButton" width="18%" align="center" height="100%" name="button" label="Supprimer">
						<interact onClick="Remove()" />
					</control>
					<panel width="6%" />
					<control id="achatButton" width="18%" align="center" height="100%" name="button" label="Achat">
						<interact onClick="Achat()" />
					</control>
					<panel width="5%" />
				</panel>
			</panel>
		</layer>
	</screen>
</nifty>