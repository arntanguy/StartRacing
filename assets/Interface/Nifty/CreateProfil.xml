<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<useStyles filename="nifty-default-styles.xml" />
	<useControls filename="nifty-default-controls.xml" />
	
	<screen id="createprofil" controller="game.CreateProfilScreen">
		<layer id="background" childLayout="center">
		
		</layer>
		<layer id="foreground" childLayout="center">
			<panel id="centerWrapper" height="100%" childLayout="vertical">
				<text font="Interface/Fonts/ArialBlack_60.fnt" height="20%" align="center" color="#ffff"
					text="Créer un profil" />
				
				<panel childLayout="horizontal">
					<text font="Interface/Fonts/Default.fnt" width="30%" align="center" text="Saisir votre login : " />
					<control name="textfield" width="40%" id="login" />
				</panel>
				<panel childLayout="horizontal" color="#0000">
					<panel width="30%"/>
					<control name="textfield" width="60%" id="result" color="#ffff"/>
				</panel>
				
				<panel childLayout="horizontal" color="#0000">		
					<text font="Interface/Fonts/Default.fnt" height="25px" width="30%" align="center" text="Voiture Standard : " />
				</panel>
				<panel height="5%"/>
				<panel childLayout="horizontal">
					<panel childLayout="vertical" width="20%">
						<text font="Interface/Fonts/Default.fnt" height="25px" width="30%" align="center" text="Hauteur pneu : " />
						<text font="Interface/Fonts/Default.fnt" height="25px" width="30%" align="center" text="Rapport engrenage : " />
						<text font="Interface/Fonts/Default.fnt" height="25px" width="30%" align="center" text="Hauteur rayon : " />
						<text font="Interface/Fonts/Default.fnt" height="25px" width="30%" align="center" text="Poids : " />
						<text font="Interface/Fonts/Default.fnt" height="25px" width="30%" align="center" text="Rigidité : " />
						<text font="Interface/Fonts/Default.fnt" height="25px" width="30%" align="center" text="Masse : " />
						<text font="Interface/Fonts/Default.fnt" height="25px" width="30%" align="center" text="Nbr Tours / Min :" />
						<text font="Interface/Fonts/Default.fnt" height="25px" width="30%" align="center" text="Limite : " />
					</panel>
					<panel width="1%"/>
					<panel childLayout="vertical" width="20%" >
						<control name="textfield" height="25px" id="StandtireHeight" color="#ffff"/>
						<control name="textfield" height="25px" id="StandfinalGearRatio" color="#ffff"/>
						<control name="textfield" height="25px" id="StandtireRadius" color="#ffff"/>
						<control name="textfield" height="25px" id="Standweight" color="#ffff"/>
						<control name="textfield" height="25px" id="Standstiffness" color="#ffff"/>
						<control name="textfield" height="25px" id="Standmass" color="#ffff"/>
						<control name="textfield" height="25px" id="StandidleRpm" color="#ffff"/>
						<control name="textfield" height="25px" id="Standredline" color="#ffff"/>
					</panel>
				</panel>
						
				<panel height="30%"/>
				<panel height="14%" width="100%" valign="bottom" align="center" childLayout="horizontal">
					<panel width="10%" />
					<control id="returnButton" width="30%" align="center" height="100%" name="button" label="Retour">
						<interact onClick="gotoMainMenu()" />
					</control>
					<panel width="20%" />
					<control id="applyButton" width="30%" align="center" height="100%" name="button" label="Valider">
						<interact onClick="gotoApply()" />
					</control>
					<panel width="10%" />
				</panel>
				<panel height="5%"/>
			</panel>
		</layer>
	</screen>
</nifty>