<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<useStyles filename="nifty-default-styles.xml" />
	<useControls filename="nifty-default-controls.xml" />
	
	<screen id="createprofil" controller="game.ProfilsScreen">
		<layer id="background" childLayout="center">
			<image filename="Interface/Nifty/start_background.jpg"
				width="100%" height="100%" />
		</layer>
		
		<layer id="layer" backgroundColor="#003f" childLayout="horizontal">
			<text id="text4" style="nifty-label" height="5%" width="20%" text="Saisir votre login : "
			color="#000f" textHAlign="left" textVAlign="center"/>
			<control name="textfield" width="40%" height="5%"></control>
		</layer>
		
		<panel height="14%" width="52%" valign="bottom" align="center" childLayout="horizontal">
			<control id="returnButton" width="50%" align="center" height="100%" name="button" label="Menu Principal">
				<interact onClick="gotoMainMenu()" />
			</control>
			<panel width="5px" />
			<control id="applyButton" width="50%" align="center" height="100%" name="button" label="Appliquer">
				<interact onClick="Enregistrer()" />
			</control>
		</panel>

	</screen>
</nifty>