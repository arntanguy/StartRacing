<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<useStyles filename="nifty-default-styles.xml" />
	<useControls filename="nifty-default-controls.xml" />
	
	<screen id="options" controller="game.OptionScreenState">
		<layer id="background" childLayout="center">
			<image filename="Interface/Nifty/start_background.jpg"
				width="100%" height="100%" />
		</layer>
		<layer id="foreground" childLayout="center">
			<panel height="100%" width="60%" childLayout="vertical">
				<text font="Interface/Fonts/ArialBlack_60.fnt" height="20%" align="center" color="#ffff"
					text="${CALL.getMenuTitle()}" />
				
				<panel height="70%" width="80%" align="center" childLayout="vertical">
					<panel childLayout="horizontal">
						<text font="Interface/Fonts/ArialBlack_60.fnt" height="100%" width="60%" align="center" text="Activer le son" />
						<control name="checkbox" width="40%" id="activateSound" />
					</panel>
					<panel childLayout="horizontal">
						<text font="Interface/Fonts/ArialBlack_60.fnt" height="100%" width="60%" align="center" text="écran large (16/9)" />
						<control name="checkbox" width="40%" id="wideScreen" />
					</panel>
					<panel childLayout="horizontal">
						<text font="Interface/Fonts/ArialBlack_60.fnt" height="100%" width="60%" align="center" text="Résolution de l'écran" />
						<control name="dropDown" width="40%" id="resolutionDropDown" />
					</panel>
				</panel>
				
				<panel height="10%" width="100%" valign="bottom" align="center" childLayout="horizontal">
					<control id="returnButton" width="30%" align="center" height="100%" name="button" label="Menu Principal">
						<interact onClick="gotoMainMenu()" />
					</control>
					<panel width="5px" />					
					<control id="applyButton" width="30%" align="center" height="100%" name="button" label="Appliquer">
						<interact onClick="applyOptions()" />
					</control>
				</panel>
			</panel>
		</layer>
	</screen>
</nifty>