<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<useStyles filename="nifty-default-styles.xml" />
	<useControls filename="nifty-default-controls.xml" />
	
	<screen id="start" controller="game.StartScreenState">
		<layer id="background" childLayout="center">
			<image filename="Interface/Nifty/start_background.jpg"
				width="100%" height="100%" />
		</layer>
		<layer id="foreground" childLayout="center">
			<panel id="centerWrapper" height="100%" childLayout="vertical">
				<text font="Interface/Fonts/ArialBlack_60.fnt" height="20%" align="center" color="#ffff"
					text="${CALL.getTitle()}" />
					
				<control id="freeRunButton" align="center" name="button" label="Course Libre"
					width="32%" height="10%">
					<interact onClick="startFreeForAll()" />
				</control>
				<panel height="5px" />
				
				<control id="halfMileButton" align="center" name="button" label="Course Demi-Mile"
					width="32%" height="10%">
					<interact onClick="startGame(half)" />
				</control>
				<panel height="5px" />
				
				<control id="quarterMileButton" align="center" name="button" label="Course Quart de Mile"
					width="32%" height="10%">
					<interact onClick="startGame(quarter)" />
				</control>
				<panel height="5px" />
				
				<control id="optionButton" align="center" name="button" label="Options"
					width="32%" height="10%">
					<interact onClick="showOptions()" />
				</control>
				<panel height="5px" />
				
				<control id="newProfil" align="center" name="button" label="Nouveau profil"
					width="32%" height="10%">
					<interact onClick="newProfil()" />
				</control>
				<panel height="5px" />
				
				<control id="oldProfil" align="center" name="button" label="Choisir/GÃ©rer un profil"
					width="32%" height="10%">
					<interact onClick="chooseProfil()" />
				</control>
				<panel height="5px" />
				
				<control id="quitButton" align="center" name="button" label="Quitter"
					width="32%" height="10%">
					<interact onClick="quitGame()" />
				</control>
			</panel>
		</layer>
	</screen>
</nifty>